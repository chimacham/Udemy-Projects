import random

rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ðŸ‘‡

options = [rock, paper, scissors]

user_choice = int(input("What do you choose? Type 0 for Rockm 1 for Paper or 2 for Scissors \n"))


if user_choice > 2:
  print("The number you entered is out of range, You Lose!")
else:                
  print(f"You Chose:\n {options[user_choice]}")

  computer_choice = random.randint(0,2)
  print(f"Computer Chose: \n {options[computer_choice]}")

  if user_choice == computer_choice:
    print("Draw!")
  elif user_choice == 0 and computer_choice == 1:
    print("You Lose!")
  elif user_choice == 0 and computer_choice == 2:
    print("You Win!")
  elif user_choice == 1 and computer_choice == 0:
    print("You Win") 
  elif user_choice == 1 and computer_choice == 2:
    print("You Lose!")
  elif user_choice == 2 and computer_choice == 0:
    print("You Lose!")
  elif user_choice == 2 and computer_choice == 1:
    print("You Win!")
    